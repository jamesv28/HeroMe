<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jvolmert.herome.Fragments.MainFragment"
    android:background="@drawable/drawablebg_gradient">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#253748"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar" > 
        
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/topbannerbar"/>
        </android.support.v7.widget.Toolbar>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/heroes"
            android:id="@+id/imageView2"
            android:layout_marginTop="15dp"/>

        <Button
            android:text="CAME BY ACCIDENT"
            android:layout_width="300dp"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hero_button"
            android:layout_height="50dp"
            android:textColor="#FAC740"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/lightning"
            android:drawableRight="@drawable/itemselected"
            android:paddingLeft="5dp"
            android:paddingRight="19dp" />

        <Button
            android:text="GENETIC MUTATATION"
            android:layout_width="300dp"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hero_button"
            android:layout_height="50dp"
            android:textColor="#FAC740"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/atomic"
            android:drawableRight="@drawable/itemselected"
            android:paddingLeft="5dp"
            android:paddingRight="19dp"
            android:elevation="0dp" />

        <Button
            android:text="BORN WITH THEM"
            android:layout_width="300dp"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hero_button"
            android:layout_height="50dp"
            android:textColor="#FAC740"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/rocket"
            android:drawableRight="@drawable/itemselected"
            android:paddingLeft="5dp"
            android:paddingRight="19dp" />

        <Button
            android:text="CHOOSE POWERS"
            android:layout_width="300dp"
            android:id="@+id/button4"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hero_button"
            android:layout_height="50dp"
            android:textColor="#10161D"
            android:layout_marginTop="15dp"
            android:drawableRight="@drawable/itemselected"
            android:paddingLeft="5dp"
            android:paddingRight="19dp"
            android:backgroundTint="#FAC740"
            android:textSize="22sp" />
    </LinearLayout>
</FrameLayout>
